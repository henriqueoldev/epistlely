---
import "../styles/default.css";

const { cover, title, description, path } = Astro.props;
---
<button onclick={"window.location.href = '/Book?id=" + path + "'"} class="wCard">
  <div class="imgDiv">
    <img src={"/covers/" + cover} alt={title + " Cover"} />
  </div>
  <div>
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</button>

<style>
  .wCard {
    display: flex;
    max-width: 1280px;
    justify-content: space-between;
    align-items: center;
    background-color: var(--primary-color);
    padding: 1rem;
    gap: 1rem;
    border-radius: 1rem;
    cursor: pointer;
    border: none;
    transition: all ease-out 0.2s;
    text-decoration: none;
    color: var(--text-color);
  }

  .wCard .imgDiv {
    width: 500px;
    height: 200px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .wCard img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .wCard:hover {
    box-shadow: 0px 3px 5px -2px rgba(0, 0, 0, 0.5);
    transform: translate(0px, -5px);
  }
</style>
